

<div class="current_orders">

    <h1>Current Orders</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Email</th>
          <th>Pay type</th>
          <th colspan="3">Admin, what would you like to do ?</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.address %></td>
            <td><%= order.email %></td>
            <td><%= order.pay_type %></td>
            <td><%= link_to 'Show Order', order, :class => "admin-links" %></td>
            <td><%= link_to 'Edit Order', edit_order_path(order), :class => "admin-links" %></td>
            <td><%= link_to 'Destroy Order', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => "admin-links" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

   
</div>





<div class="page_links">
  <%= link_to 'New Order', new_order_path%>
</div>
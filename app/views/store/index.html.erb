<h1>Cars on offer</h1>

<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>



<ul class="catalog">
  <% @products.each do |product| %>
    <li>
      <%= image_tag(product.image_url) %>
      <h2><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
      <div class="price">
        <%= pounds(product.price) %>
      </div>
    </li>
  <% end %>
</ul>

